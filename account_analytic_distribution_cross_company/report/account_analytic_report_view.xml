<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_analytic_line_report_pivot" model="ir.ui.view">
            <field name="name">account.analytic.line.report.pivot</field>
            <field name="model">account.analytic.report</field>
            <field name="arch" type="xml">
                <pivot string="Analytic Lines">
                    <field name="analytic_account_id" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_account_analytic_line_report_graph" model="ir.ui.view">
            <field name="name">account.analytic.line.report.graph</field>
            <field name="model">account.analytic.report</field>
            <field name="arch" type="xml">
                <graph string="Analytic Lines">
                    <field name="analytic_account_id"/>
                    <field name="date" interval="month"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>


        <record id="view_account_analytic_line_report_search" model="ir.ui.view">
            <field name="name">account.analytic.line.report.search</field>
            <field name="model">account.analytic.report</field>
            <field name="arch" type="xml">
                <search string="Analytic Lines">
                    <field name="analytic_account_id"/>
                    <field name="axis_id"/>
                    <filter string="This Month" name="month" domain="[('date','&lt;=', time.strftime('%Y-%m-%d')),('date','&gt;=',time.strftime('%Y-%m-01'))]" help="month"/>
                    <group expand="0" string="Extended Filters...">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="date"/>
                    </group>
                    <group expand="1" string="Group By">
                        <filter string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <separator/>
                        <filter string="Month" context="{'group_by':'date:month'}" help="Group by month of date"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_account_analytic_line_report_stat_all" model="ir.actions.act_window">
            <field name="name">Analytic Analysis</field>
            <field name="res_model">account.analytic.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph</field>
            <field name="context">{}</field>  <!-- force empty -->
        </record>

        <menuitem id="menu_analytic_reports" name="Analytic Statements"
            parent="account.menu_finance_reports" sequence="99" groups="account.group_account_user"/>
        <menuitem name="Analytic Report" action="action_account_analytic_line_report_stat_all"  id="menu_account_analytic_line_report_all"
            parent="menu_analytic_reports"  sequence="3"/>

    </data>
</openerp>
