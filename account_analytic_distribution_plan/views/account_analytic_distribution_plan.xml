<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_analytic_distribution_plan" model="ir.ui.view">
            <field name="name">account.analytic.distribution.form.inherited2</field>
            <field name="model">account.analytic.distribution.plan</field>
            <field name="arch" type="xml">
                <form string="Distribution lists">
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" class="oe_inline" placeholder="e.g. Plan for travel expenses"/>
                        </h1>
                    </div>
                    <field name="analytic_distribution_ids" >
                        <tree string="List of distributions" editable="bottom">
                            <field name="rate" />
                            <field name="analytic_account_id" />
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="account_distribution_plan_action" model="ir.actions.act_window">
            <field name="name">Distribution Plan</field>
            <field name="res_model">account.analytic.distribution.plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem action="account_distribution_plan_action" id="menu_distribution_plan"
            parent="account.menu_analytic_accounting"/>

    </data>
</openerp>
