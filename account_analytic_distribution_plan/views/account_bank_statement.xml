<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_bank_statement_form" model="ir.ui.view">
            <field name="name">account.bank.statement.form</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account_analytic_distribution.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='analytic_distribution_ids']"
                       position="before">
                    <field name="distribution_plan_id" attrs="{'readonly' : [('journal_entry_ids', '!=', [])] }"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

