<?xml version="1.0"?>
<openerp>
    <data>

        <record id="invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form2</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_analytic_distribution.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_distribution_ids']"
                       position="before">
                    <field name="distribution_plan_id" />
                </xpath>
            </field>
        </record>

        <record id="invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form2</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_analytic_distribution.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_distribution_ids']"
                       position="before">
                    <field name="distribution_plan_id" />
                </xpath>
            </field>
        </record>

        <record id="view_invoice_line_form" model="ir.ui.view">
            <field name="name">account.invoice.line.form2</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account_analytic_distribution.view_invoice_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='analytic_distribution_ids']"
                       position="before">
                    <field name="distribution_plan_id" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
